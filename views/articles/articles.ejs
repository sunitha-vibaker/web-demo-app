<h3>Articles</h3>

<div class="row">
        <form class="col s12" action="/articles/add" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input  id="title" type="text" class="validate" name="title" required>
              <label for="title">Title</label>
            </div>
          </div>

          <div class="row">
                <div class="input-field col s12">
                  <textarea id="body" class="materialize-textarea validate" name="body" required></textarea>
                  <label for="body">Body</label>
                </div>
              </div>
              <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="submit">
                            <i class="material-icons">Add Article</i>
                    </button>
              </div>
          
          
        </form>
      </div>
            

<table class="stripped">
        <thead>
          <tr>
              <th>Name</th>
              <th>Item Name</th>
              <th>Item Price</th>
          </tr>
        </thead>

        <tbody>
            <% articles.forEach(function(article){ %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.body %></td>
                    <td><a href="/articles/edit/<%= article.id %>">Edit</a> | <a href="/articles/delete/<%= article.id %>">Delete</a></td>
                </tr>

            <% }); %>
          
          
        </tbody>
      </table>