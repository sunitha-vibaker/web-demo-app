<h3>Edit Article</h3>

<div class="row">
        <form class="col s12" action="/articles/update/<%= article.id %>" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input  id="title" type="text" class="validate" value="<%= article.title %>" name="title" required>
              <label for="title">Title</label>
            </div>
          </div>

          <div class="row">
                <div class="input-field col s12">
                  <textarea id="body" class="materialize-textarea validate" name="body" required><%= article.body %></textarea>
                  <label for="body">Body</label>
                </div>
              </div>
              <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="submit">
                            <i class="material-icons">Update Article</i>
                    </button>
              </div>
          
          
        </form>
      </div>