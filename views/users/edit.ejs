<h3>Edit Article</h3>
<%= user.name %>
<div class="row">
        <form class="col s12" action="/users/update/<%= user.id %>" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input  id="name" type="text" class="validate" name="name" value="<%= user.name %>" required>
              <label for="fname">Full Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input  id="uname" type="text" class="validate" name="uname" value="<%= user.username %>" required>
              <label for="uname">User Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input  id="pwd" type="password" class="validate" name="password" value="<%= user.password %>" required>
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input  id="email" type="email" class="validate" name="email" value="<%= user.email %>" required>
              <label for="email">Email</label>
            </div>
          </div>

          <div class="row">
                <div class="input-field col s12">
                  <textarea id="address" class="materialize-textarea validate" name="address" required><%= user.address %></textarea>
                  <label for="address">Address</label>
                </div>
              </div>
              <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="submit">
                            <i class="material-icons">Add User</i>
                    </button>
              </div>
          
        </form>
      </div>