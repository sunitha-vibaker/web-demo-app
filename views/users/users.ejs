<h3>Articles</h3>

<div class="container">
        <form  action="/users/add" method="POST">
          
          <div class="form-group">
              <label for="email">Full Name</label>
              <input  id="name" type="text" class="form-control" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">User Name</label>
                <input  id="username" type="text" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                  <label for="password">Password</label>
                  <input  id="pwd" type="password" class="form-control" name="password" required>
                  
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input  id="email" type="email" class="form-control" name="email" required>
                    
                  </div>
                  <div class="form-group">
                      <label for="email">Address</label>
                      <textarea id="address" class="form-control" name="address" required></textarea>
                      
                    </div>
                    <div class="form-group">
                        
                        <input  id="temp_id" type="hidden" name="temp_id" value="<%= users.length + 1 %>" required>
                        
                      </div>
              
              <div class="row">
                    <button class="btn btn-info" type="submit" >
                            <i class="material-icons">Add User</i>
                    </button>
              </div>
          
          
        </form>
      </div>
            

<table class="table">
        <thead>
          <tr>
              <th>Name</th>
              <th>User Name</th>
              <th>Email</th>
              <th>Address</th>
          </tr>
        </thead>

        <tbody>
            <% users.forEach(function(user){ %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.address %></td>
                    <td><a href="/users/edit/<%= user.id %>">Edit</a> | <a href="/users/delete/<%= user.id %>">Delete</a>  | <a href="/users/details/<%= user.id %>">View</a></td>
                </tr>

            <% }); %>
          
          
        </tbody>
      </table>